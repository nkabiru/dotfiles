let mapleader=" "

""" Settings
set showmode
set scrolloff=5
set incsearch
set number
set ideajoin
set ignorecase
set smartcase

""" Normal
nmap <leader>x <Action>(CloseContent)
nmap <leader>l <Action>(ReformatCode)
nmap <leader>R <Action>(IdeaVim.ReloadVimRc.reload)
nmap <leader>t <Action>(ToggleLineBreakpoint)
nmap <leader>/ <Action>(CommentByLineComment)

nmap gi <Action>(GotoImplementation)
nmap gd <Action>(GotoDeclaration)

nmap <M-k> <Action>(MoveLineUp)
nmap <M-j> <Action>(MoveLineDown)

""" Visual
vmap <M-k> <Action>(MoveLineUp)
vmap <M-j> <Action>(MoveLineDown)
vmap <leader>/ <Action>(CommentByBlockComment)

inoremap ;; <Esc>A;
nnoremap ;; <Esc>A;
inoremap ,, <Esc>A,
nnoremap ,, <Esc>A,
